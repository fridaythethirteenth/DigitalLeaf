<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../components/meta.ejs') %>
  </head>
  <body class="vh-100 d-flex flex-column">
    <header>
      <%- include('../components/navbar.ejs', {loggedIn: loggedIn, firstName: firstName}) %>
    </header>
    <main class="d-flex flex-grow-1 bg-body-secondary overflow-hidden">
      <%- include('../components/sidebar.ejs') %>
      <section id="tasks" class="container mt-5">
        <%- include('../components/actionbar.ejs', {context: 'project', page: 'tasks', project}) %>
        
        <div class="d-flex justify-content-between mt-4">
          <h3>Tasks</h3>
          <button
            class="btn btn-dark d-flex align-items-center gap-1"
            type="button"
            data-bs-toggle="modal"
            data-bs-target="#staticBackdrop">
            <i class="bi bi-plus-lg"></i>
            Create Task
          </button>
        </div>
        <hr>

        <!-- Modal -->
        <div
          class="modal fade"
          id="staticBackdrop"
          data-bs-backdrop="static"
          data-bs-keyboard="false"
          tabindex="-1"
          aria-labelledby="staticBackdropLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">
                  Create Task
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <form action="/project/<%- project.id %>/tasks" method="post">
                <div class="modal-body d-flex flex-column gap-2">
                    <input type="text" name="title" id="title" placeholder="Task Title*" class="form-control" maxlength="50" required>
                    <div class="mt-2">
                      <label for="dueDate" class="text-secondary">Due Date:</label>
                      <input type="date" name="dueDate" id="dueDate" class="form-control text-secondary">
                    </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">
                    Cancel
                  </button>
                  <button type="submit" class="btn btn-success">
                    Create
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>

        <div class="content overflow-y-auto" style="height: 80%;">
          <% for (let task of tasks) { %>
            <% task.due_date = String(task.due_date).split(' ').splice(1,3).join(' ') %>
            <%- include('../components/projects/task.ejs', {task}) %>
          <% } %>
        </div>
      </section>
      <%- include('../components/projects/details_bar.ejs', {project, user}) %>
    </main>
  </body>
</html>
