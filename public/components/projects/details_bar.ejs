<% let progressBarWidth = `style= "width: ${project.progress}%"`%>
<div class="col-2 bg-dark d-flex flex-column">
  <div class="d-flex w-100 mb-3">
    <button class="btn btn-dark rounded-0 w-50 text-leaf-green">Project</button>
    <button class="btn btn-dark rounded-0 w-50">Team</button>
  </div>
  <div class="card border-0 mx-auto">
    <div class="card-body bg-dark text-light">
      <h2><%- project.name %></h2>
      <p>
        <%- project.description %>
      </p>
    </div>
  </div>
  <img src="../../images/stock.jpg" alt="project image" class="mx-auto" style="width: 90%;">
  <div class="progress mt-auto mb-3 mx-auto" role="progressbar" aria-label="project progress" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="height: 1.5rem; width: 90%;">
    <div class="progress-bar bg-success" <%- progressBarWidth %>><%- project.progress %></div>
  </div>
</div>
