<div class="task">
  <details class="card">
    <summary class="d-flex justify-content-between align-items-center p-2">
      <%- task.name %>
      <a href="/project/<%- project.id %>/tasks/<%- task.id %>">
        <button type="button" class="btn btn-sm btn-outline-dark">
          Show Details <i class="bi bi-chevron-right"></i>
        </button>
      </a>
    </summary>
    <div class="card-body p-2">
      <div class="d-flex gap-4">
        <div>
          <i class="bi bi-pencil-square"></i>
          <% console.log(task); %>
          <%- task.num_subtasks %> subtasks
        </div>
        <div>
          <i class="bi bi-calendar"></i>
          Due: <%- task.due_date %>
        </div>
      </div>
    </div>
  </details>
</div>